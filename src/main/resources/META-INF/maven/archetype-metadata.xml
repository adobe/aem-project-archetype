        <module id="${rootArtifactId}.ui.apps" dir="ui.apps" name="ui.apps">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                <directory></directory>
                <includes>
                    <include>.gitignore</include>
                </includes>
