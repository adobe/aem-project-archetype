<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[]"
        cq:template="/conf/${confFolderName}/settings/wcm/templates/xf-web-variation"
        cq:xfMasterVariation="{Boolean}true"
        cq:xfVariantType="web"
        jcr:primaryType="cq:PageContent"
        jcr:title="Header"
        sling:resourceType="${appsFolderName}/components/xfpage">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="${appsFolderName}/components/container"
            layout="simple">
            <navigation
                jcr:primaryType="nt:unstructured"
                sling:resourceType="${appsFolderName}/components/navigation"
                collectAllPages="false"
                skipNavigationRoot="false"
                structureDepth="1"
                structureStart="2"/>
            <languagenavigation
                jcr:primaryType="nt:unstructured"
                sling:resourceType="${appsFolderName}/components/languagenavigation"
                navigationRoot="/content/${contentFolderName}"
                structureDepth="2"/>
            <search
                jcr:primaryType="nt:unstructured"
                sling:resourceType="${appsFolderName}/components/search"
                searchRoot="/content/${contentFolderName}/${language_country.split('_').get(0)}"/>
        </root>
    </jcr:content>
</jcr:root>
